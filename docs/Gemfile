source "https://rubygems.org"

# Jekyll core
gem "jekyll", "~> 4.3"

# Chirpy theme (modern UI, dark mode, built-in search & TOC)
gem "jekyll-theme-chirpy", "~> 7.3"

# Plugins (required by Chirpy)
group :jekyll_plugins do
  gem "jekyll-paginate"
  gem "jekyll-sitemap"
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-archives"
  gem "jekyll-include-cache"
  gem "jekyll-redirect-from"
end

# Required by Jekyll on Ruby 3+
gem "webrick", "~> 1.8"
